<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.RootController">
   <children>
      <TableView fx:id="tableView" prefHeight="200.0" prefWidth="400.0">
        <columns>
          <TableColumn prefWidth="100.0" text="이름" />
          <TableColumn prefWidth="100.0" text="국어" />
            <TableColumn prefWidth="100.0" text="수학" />
            <TableColumn prefWidth="100.0" text="영어" />
        </columns>
      </TableView>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Button fx:id="btnReg" mnemonicParsing="false" text="추가" />
            <Button fx:id="btnBarGraph" mnemonicParsing="false" text="학생별 막대그래프" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </children>
</VBox>
